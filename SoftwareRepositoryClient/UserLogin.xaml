<Window x:Class="SoftwareRepositoryClient.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserLogin" Height="300" Width="300" Background="AliceBlue" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Label Content="UserName" Height="28" HorizontalAlignment="Left" Margin="21,27,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="116,27,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="26,72,0,0" Name="label2" VerticalAlignment="Top" />
        <Button Content="LogIn" Height="23" HorizontalAlignment="Left" Margin="100,160,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="116,72,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
